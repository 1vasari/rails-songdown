<% if current_user.present? %>
  <!-- Menu toggle -->
  <a href="#menu" id="menuLink" class="menu-link">
    <!-- Hamburger icon -->
    <span></span>
  </a>

  <div id="menu">
    <div class="pure-menu">
      <%= link_to 'Songdown', home_path, :class => 'pure-menu-heading' %>

      <ul class="pure-menu-list">
        <li class="pure-menu-item">
          <%= link_to 'Home', home_path, :class => 'pure-menu-link' %>
        </li>

        <li class="pure-menu-item">
          <%= link_to 'Songs', songs_path, :class => 'pure-menu-link' %>
        </li>

        <li class="pure-menu-item">
          <%= link_to 'Setlists', setlists_path, :class => 'pure-menu-link' %>
        </li>

        <li class="pure-menu-item">
          <%= link_to 'Editor', editor_path, :class => 'pure-menu-link' %>
        </li>

        <li class="pure-menu-item">
          <%= link_to 'Settings', settings_path, :class => 'pure-menu-link' %>
        </li>

        <% if current_user.is_admin? %>
          <li class="pure-menu-item">
            <%= link_to 'Admin', admin_path, :class => 'pure-menu-link' %>
          </li>
        <% end %>

        <li class="pure-menu-item">
          <%= link_to 'About', about_path, :class => 'pure-menu-link' %>
        </li>

        <li class="pure-menu-item">
          <%= link_to 'Help', help_path, :class => 'pure-menu-link' %>
        </li>

        <li class="pure-menu-item">
          <%= link_to 'Logout', destroy_session_path(current_user), :class => 'pure-menu-link', :method => :delete %>
        </li>
      </ul>
    </div>
  </div>
<% end %>

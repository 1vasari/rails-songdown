<%= form_for @song do |f| %>
  <% if @song.new_record? %>
    <%= link_to 'Back to Songs', songs_path, class: 'btn btn-primary' %>
  <% else %>
    <%= link_to 'Back to Song', song_path(@song), class: 'btn btn-primary' %>
  <% end %>

  <% if @song.errors.any? %>
    <h2>Something went wrong:</h2>

    <ul>
      <% for error_message in @song.errors.full_messages %>
        <li>
          <%= error_message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :artist, class: 'form-label' %>
    <%= f.text_field :artist, placeholder: 'Artist', class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, placeholder: 'Title', class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :youtube_url, 'YouTube URL', class: 'form-label' %>
    <%= f.text_field :youtube_url,
      autocomplete: 'off',
      placeholder: 'youtube.com/watch?v=123456789',
      class: 'form-input'
    %>
  </div>

  <div class="form-group">
    <%= f.label :key, class: 'form-label' %>
    <%= f.select :key, song_keys, {}, class: 'form-select' %>
  </div>

  <div class="form-group">
    <%= f.label :song, class: 'form-label' %>
    <%= f.text_area :content,
      autocomplete: 'off',
      class: 'songdown-editor',
      class: 'form-input'
    %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>

    <% if params[:id] %>
      <%= link_to 'Delete Song', song_path(@song),
        method: :delete,
        class: 'btn btn-error',
        data: { confirm: "Are you sure you want to delete '#{@song.title}'?" }
      %>
    <% end %>
  </div>
<% end %>

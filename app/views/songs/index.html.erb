<h1>Songs</h1>

<p>
  <%= form_tag songs_path, :method => 'get' do %>
    <%= text_field_tag :query, params[:query] || '', :autocomplete => 'off' %>
    <%= submit_tag 'Search' %>
  <% end %>
</p>

<% if @current_user.is_editor? %>
  <%= link_to 'New Song', new_song_path %>
<% end %>

<ul>
  <% @songs.each do |song| %>
    <li>
      <%= link_to "#{song.artist} - #{song.title}", song %>
    </li>
  <% end %>
</ul>

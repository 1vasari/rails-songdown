<div class="header">
  <h1>All Songs</h1>
</div>

<div class="content">
  <div class="pure-g">
    <div class="pure-u-1-2">
      <%= render 'search' %>
    </div>

    <div class="pure-u-1-2">
      <div style="text-align: right; margin-top: 0.83em;">
        <%= link_to 'New Song', new_song_path, :class => 'pure-button pure-button-primary' %>
      </div>
    </div>

    <% @artists.each do |artist| %>
      <div class="pure-u-1-3">
        <fieldset>
          <legend><h2 style="padding: 0 10px;"><%= artist %></h2></legend>

          <ul class="songlist">
            <% @songlist[artist].each do |song| %>
              <li>
                <%= link_to song.title, song, :class => 'fancy-link' %>
              </li>
            <% end %>
          </ul>
        </fieldset>
      </div>
    <% end %>
  </div>
</div>

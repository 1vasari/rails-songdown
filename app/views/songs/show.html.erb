<div class="header">
  <h1><%= @song.full_name %></h1>
</div>

<div class="content">
  <div class="pure-g">
    <div class="pure-u-2-3"></div>

    <div class="pure-u-1-3">
      <% if @current_user.is_editor? %>
        <%= link_to 'Edit Song', edit_song_path(@song), :class => 'fancy-link' %> |
        <%= link_to 'Delete Song', song_path(@song),
          :method => :delete,
          :class => 'fancy-link',
          :data => {
            :confirm => "Are you sure you want to delete \"#{@song.full_name}\"?"
          }
        %>
      <% end %>

      <div>
        <strong>Views:</strong> <%= @song.views %>
      </div>

      <%= form_tag song_path(@song), :class => 'pure-form pure-form-stacked', :method => 'get' do %>
        <strong>
          <%= label_tag 'Key:' %>
        </strong>

        <%= select_tag :key,
          options_for_select([
            ['C major / A minor', 'C'],
            ['Db major / Bb minor', 'Db'],
            ['D major / B minor', 'D'],
            ['Eb major / C minor', 'Eb'],
            ['E major / C# minor', 'E'],
            ['F major / D minor', 'F'],
            ['Gb major / Eb minor', 'Gb'],
            ['G major / E minor', 'G'],
            ['Ab major / F minor', 'Ab'],
            ['A major / F# minor', 'A'],
            ['Bb major / G minor', 'Bb'],
            ['B major / G# minor', 'B'],
          ], @song_key),
          :style => 'width: 100%',
          :onchange => 'this.form.submit()'
        %>
      <% end %>
    </div>

    <div class="pure-u-1-1">
      <%= @song_html.html_safe %>
    </div>
  </div>
</div>

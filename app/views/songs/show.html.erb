<div class="header">
  <h1><%= @song.full_name %></h1>
</div>

<div class="content">
  <div class="pure-g">
    <div class="pure-u-2-3" id="youtube-video">
      <%= embed_youtube(@song.youtube_url) %>
    </div>

    <div class="pure-u-1-3" id="toolbox">
      <p>
        <% if @current_user.is_editor? %>
          <%= link_to 'Edit Song', edit_song_path(@song),
            :class => 'pure-button pure-button-primary'
          %>
        <% end %>

        <span id="print_song_button" class="pure-button pure-button-primary">
          Print Song
        </span>
      </p>

      <%= form_tag '', :class => 'pure-form pure-form-stacked' do %>
        <label>
          <%= label_tag 'Key:' %>
        </label>

        <%= select_tag :key,
          options_for_select([
            ['C major / A minor', 'C'],
            ['Db major / Bb minor', 'Db'],
            ['D major / B minor', 'D'],
            ['Eb major / C minor', 'Eb'],
            ['E major / C# minor', 'E'],
            ['F major / D minor', 'F'],
            ['Gb major / Eb minor', 'Gb'],
            ['G major / E minor', 'G'],
            ['Ab major / F minor', 'Ab'],
            ['A major / F# minor', 'A'],
            ['Bb major / G minor', 'Bb'],
            ['B major / G# minor', 'B'],
          ], @song_key),
          :style => 'width: 100%',
          :id => 'song_transpose'
        %>
      <% end %>

      <p>
        <strong>Views:</strong> <%= @song.views %>
      </p>
    </div>

    <div class="pure-u-1-1">
      <%= @song_html.html_safe %>
    </div>
  </div>
</div>

<div class="header">
  <h1><%= @song.decorate :name %></h1>
</div>

<div class="content">
  <div class="pure-g">
    <div class="pure-u-2-3" id="youtube-video">
      <%= embed_youtube(@song.youtube_url) %>
    </div>

    <div class="pure-u-1-3" id="toolbox">
      <p>
        <%= link_to 'Edit Song', edit_song_path(@song), :class => 'pure-button pure-button-primary' %>

        <span id="print_song_button" class="pure-button pure-button-primary">
          Print Song
        </span>
      </p>

      <%= form_for @song, method: 'get', html: { class: 'pure-form pure-form-stacked' } do |f| %>
        <%= f.label :key %>

        <%=
          select_tag(
            :key,
            options_for_select(song_keys, @song.key),
            style: 'width: 100%',
            onchange: %q!this.form.querySelector('input[type="submit"]').click()!
          )
        %>

        <%= f.submit hidden: true %>
      <% end %>

      <p>
        <strong>Views:</strong> <%= @song.views %>
      </p>
    </div>

    <div class="pure-u-1-1">
      <%= @song_html.html_safe %>
    </div>
  </div>
</div>

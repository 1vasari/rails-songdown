<div class="header">
  <h1><%= @song.full_name %></h1>
</div>

<div class="content">
  <div class="pure-g">
    <div class="pure-u-2-3"></div>

    <div class="pure-u-1-3">
      <% if @current_user.is_editor? %>
        <%= link_to 'Edit Song', edit_song_path(@song), :class => 'fancy-link' %> |
        <%= link_to 'Delete Song', song_path(@song),
          :method => :delete,
          :class => 'fancy-link',
          :data => {
            :confirm => "Are you sure you want to delete \"#{@song.full_name}\"?"
          }
        %>
      <% end %>

      <div>
        <strong>Key:</strong> <%= @song.key %>
      </div>

      <div>
        <strong>Views:</strong> <%= @song.views %>
      </div>
    </div>

    <div class="pure-u-1-1">
      <%= @song.to_html.html_safe %>
    </div>
  </div>
</div>

<div class="header">
  <h1>Register</h1>
</div>

<div class="content">
  <div class="pure-g">
    <div class="pure-u-1-2">
      <%= form_for @user,
        :url => {controller: 'users', action: 'create'},
        :html => {:class => 'pure-form pure-form-stacked big-form'} do |f|
      %>
        <p>
          <%= f.label :username %>
          <%= f.text_field :username, :placeholder => 'Batman' %>
        </p>

        <p>
          <%= f.label :email %>
          <%= f.text_field :email, :placeholder => 'someone@example.com' %>
        </p>

        <p>
          <%= f.label :email_confirmation, 'Confirm Email' %>
          <%= f.text_field :email_confirmation, :placeholder => 'someone@example.com' %>
        </p>

        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>

        <p>
          <%= f.label :password_confirmation, 'Confirm Password' %>
          <%= f.password_field :password_confirmation%>
        </p>

        <%= f.submit 'Register', :class => 'pure-button pure-button-primary' %>
      <% end %>
    </div>

    <div class="pure-u-1-2">
      <% if @user.errors.any? %>
        <h2>Something went wrong:</h2>

        <ul>
          <% for error_message in @user.errors.full_messages %>
            <li><%= error_message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="header">
  <h1>Home</h1>
</div>

<div class="content">
  <div class="pure-g">
    <div class="pure-u-1-1">
      <div style="text-align: center;">
        <%= render 'songs/search' %>
      </div>
    </div>

    <div class="pure-u-1-2">
      <h2>Most Popular</h2>

      <div>
        <% @top_songs.each do |song| %>
          <div>
            <%= link_to song.title, song, :class => 'fancy-link'%>
            <span style="float: right;">
              <strong><%= song.artist %></strong>
            </span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="pure-u-1-2">
      <h2>New</h2>

      <div>
        <% @new_songs.each do |song| %>
          <div>
            <%= link_to song.title, song, :class => 'fancy-link'%>
            <span style="float: right;">
              <strong><%= song.artist %></strong>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
